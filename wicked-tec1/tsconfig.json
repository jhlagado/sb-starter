{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "newLine": "LF",
      "outDir": "./lib/",
      "target": "es6",
      "sourceMap": true,
      "declaration": true,
      "jsx": "preserve",
      "lib": [
        "es2017",
        "dom"
      ],
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "noFallthroughCasesInSwitch": true
    },
  }
